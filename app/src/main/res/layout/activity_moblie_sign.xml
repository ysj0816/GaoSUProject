<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chuyu.gaosuproject.activity.MobileSignActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_distance_52"
        android:background="@color/a37a0bc"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/view_distance_10"
            android:paddingRight="@dimen/view_distance_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_distance_52"
                android:src="@mipmap/left_back" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="移动考勤"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/searchImg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/view_distance_10"
            android:paddingRight="@dimen/view_distance_10"
            android:src="@drawable/jilu_search" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.amap.api.maps2d.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="52dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_distance_48"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signText"
                android:layout_width="@dimen/view_distance_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/a37a0bc"
                android:gravity="center"
                android:text="签到"
                android:textColor="@color/d8e9f6"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/levalText"
                android:layout_width="@dimen/view_distance_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/solid_text"
                android:gravity="center"
                android:text="请假"
                android:textColor="@color/a37a0bc"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>

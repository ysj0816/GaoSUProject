<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trm_popup_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/view_distance_16"
    android:paddingRight="@dimen/view_distance_16"
    android:layout_marginRight="@dimen/view_distance_16">

    <LinearLayout
        android:id="@+id/llone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_distance_35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看自己考勤记录"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/t33333"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />
    <LinearLayout
        android:id="@+id/llall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_distance_35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看所有人考勤记录"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/t33333"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />
    <LinearLayout
        android:id="@+id/llNo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_distance_35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看未打上班考勤记录"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/t33333"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


</LinearLayout>
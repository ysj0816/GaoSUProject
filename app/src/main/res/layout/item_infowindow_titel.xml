<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWihte"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_distance_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_distance_4"
            android:layout_marginLeft="@dimen/view_distance_4"
            android:layout_marginRight="@dimen/view_distance_10"
            android:layout_marginTop="@dimen/view_distance_4"
            android:gravity="center"
            android:text="万超"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_distance_4"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="@dimen/view_distance_10"
            android:layout_marginTop="@dimen/view_distance_4"
            android:gravity="center"
            android:text="上班(出班)"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_distance_4"
            android:layout_marginRight="@dimen/view_distance_10"
            android:layout_marginTop="@dimen/view_distance_4"
            android:gravity="center"
            android:text="2017-08-17 16:14:22"
            android:textSize="@dimen/text_size_12" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_distance_4"

                android:layout_marginRight="@dimen/view_distance_4"
                android:layout_marginTop="@dimen/view_distance_4"
                android:background="@drawable/solid_roud_green"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/view_distance_4"
                    android:layout_marginLeft="@dimen/view_distance_4"
                    android:layout_marginRight="@dimen/view_distance_3"
                    android:layout_marginTop="@dimen/view_distance_4"
                    android:src="@drawable/map_kan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/view_distance_4"
                    android:text="查看"
                    android:textColor="@color/colorWihte"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_distance_30"
        android:background="@color/de9df7"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_distance_4"
            android:layout_marginLeft="@dimen/view_distance_4"
            android:layout_marginRight="@dimen/view_distance_10"
            android:layout_marginTop="@dimen/view_distance_4"
            android:gravity="center"
            android:text="人员"
            android:textColor="@color/t33333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/names"
            android:layout_alignBottom="@+id/names"
            android:layout_marginLeft="14dp"
            android:layout_toEndOf="@+id/names"
            android:layout_toRightOf="@+id/names"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/t33333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_distance_4"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="@dimen/view_distance_10"
            android:layout_marginTop="@dimen/view_distance_4"
            android:layout_toRightOf="@id/types"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/t33333"
            android:textSize="@dimen/text_size_12" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/times">

            <TextView
                android:id="@+id/detalaTexts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_distance_4"
                android:layout_marginLeft="@dimen/view_distance_84"
                android:layout_marginRight="@dimen/view_distance_10"
                android:layout_marginTop="@dimen/view_distance_4"
                android:gravity="center"
                android:text="详情"
                android:textColor="@color/t33333"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
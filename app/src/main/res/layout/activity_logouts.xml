<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_distance_52"
        android:background="@color/a37a0bc">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="@dimen/view_distance_12"
            android:paddingRight="@dimen/view_distance_30"
            android:src="@mipmap/left_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_distance_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view_distance_10"
        android:paddingRight="@dimen/view_distance_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_distance_44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="姓名:"
                android:textColor="@color/t33333"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/view_distance_10"
                android:textColor="@color/t999"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_distance_44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="用户名:"
                android:textColor="@color/t33333"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/log_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/view_distance_10"
                android:textColor="@color/t999"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任职类型:"
                android:textColor="@color/t33333"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/log_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/view_distance_10"
                android:textColor="@color/t999"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_distance_44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="当前版本:"
                android:textColor="@color/t33333"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/system_versioni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/view_distance_10"
                android:text="V 1.0"
                android:textColor="@color/t999"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <RelativeLayout
            android:id="@+id/rl_IP_set"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_distance_44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="服务器设置"
                android:textColor="@color/t33333"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:layout_width="@dimen/view_distance_18"
                android:layout_height="@dimen/view_distance_18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/view_distance_10"
                android:src="@mipmap/right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/view_distance_10"
        android:layout_marginTop="@dimen/view_distance_90"
        android:orientation="vertical"
        android:padding="@dimen/view_distance_10">

        <Button
            android:id="@+id/bt_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_distance_40"
            android:layout_marginTop="@dimen/view_distance_10"
            android:background="@drawable/logout_but_1"
            android:text="注销账户"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/bt_quit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_distance_40"
            android:layout_marginTop="@dimen/view_distance_20"
            android:background="@drawable/logout_but_2"
            android:text="退出程序"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/text_size_14" />


    </LinearLayout>

</LinearLayout>